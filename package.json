{
  "name": "luxacss",
  "version": "2.0.3",
  "description": "The minimalist CSS library",
  "author": "luxonauta",
  "license": "MIT",
  "keywords": [
    "css",
    "library",
    "minimal"
  ],
  "homepage": "https://luxacss.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxonauta/luxacss.git"
  },
  "bugs": {
    "url": "https://github.com/luxonauta/luxacss/issues"
  },
  "type": "module",
  "main": "./dist/luxa.js",
  "module": "./dist/luxa.js",
  "exports": {
    ".": {
      "import": "./dist/luxa.js",
      "require": "./dist/luxa.js"
    },
    "./css": "./dist/expanded/luxa.css"
  },
  "style": "./dist/expanded/luxa.css",
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "install:all": "npm install && cd docs && npm install",
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "start": "cd docs && npm start",
    "lint": "node scripts/lint.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2"
  }
}
